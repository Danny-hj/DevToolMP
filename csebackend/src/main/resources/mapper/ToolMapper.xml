<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.devtoolmp.mapper.ToolMapper">

    <resultMap id="BaseResultMap" type="com.devtoolmp.entity.Tool">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="description" property="description"/>
        <result column="category_id" property="categoryId"/>
        <result column="codehub_id" property="codehubId"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <select id="findById" resultMap="BaseResultMap">
        SELECT * FROM toolmk_tools WHERE id = #{id}
    </select>

    <select id="findByCodehubId" resultMap="BaseResultMap">
        SELECT * FROM toolmk_tools WHERE codehub_id = #{codehubId}
    </select>

    <select id="findByCategoryId" resultMap="BaseResultMap">
        SELECT * FROM toolmk_tools WHERE category_id = #{categoryId}
    </select>

    <select id="findByStatus" resultMap="BaseResultMap">
        SELECT * FROM toolmk_tools WHERE status = #{status}
    </select>

    <select id="searchByKeyword" resultMap="BaseResultMap">
        SELECT * FROM toolmk_tools
        WHERE status = 'active'
        AND (name LIKE CONCAT('%', #{keyword}, '%') OR description LIKE CONCAT('%', #{keyword}, '%'))
    </select>

    <select id="findByStatusWithPage" resultMap="BaseResultMap">
        SELECT * FROM toolmk_tools
        WHERE status = #{status}
        ORDER BY create_time DESC
        LIMIT #{limit} OFFSET #{offset}
    </select>

    <select id="countByStatus" resultType="int">
        SELECT COUNT(*) FROM toolmk_tools WHERE status = #{status}
    </select>

    <select id="countSearchByKeyword" resultType="int">
        SELECT COUNT(*) FROM toolmk_tools
        WHERE status = 'active'
        AND (name LIKE CONCAT('%', #{keyword}, '%') OR description LIKE CONCAT('%', #{keyword}, '%'))
    </select>

    <insert id="insert" parameterType="com.devtoolmp.entity.Tool" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO toolmk_tools (name, description, category_id, codehub_id, status, create_time, update_time)
        VALUES (#{name}, #{description}, #{categoryId}, #{codehubId}, #{status}, #{createTime}, #{updateTime})
    </insert>

    <update id="update" parameterType="com.devtoolmp.entity.Tool">
        UPDATE toolmk_tools
        SET name = #{name},
            description = #{description},
            category_id = #{categoryId},
            codehub_id = #{codehubId},
            status = #{status},
            update_time = #{updateTime}
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM toolmk_tools WHERE id = #{id}
    </delete>

    <select id="countAll" resultType="int">
        SELECT COUNT(*) FROM toolmk_tools
    </select>

    <select id="findAll" resultMap="BaseResultMap">
        SELECT * FROM toolmk_tools WHERE status = 'active'
    </select>

</mapper>
