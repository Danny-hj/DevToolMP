<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.devtoolmp.mapper.TelemetryDataMapper">

    <resultMap id="BaseResultMap" type="com.devtoolmp.entity.TelemetryData">
        <id column="id" property="id"/>
        <result column="tool_id" property="toolId"/>
        <result column="event_type" property="eventType"/>
        <result column="ip_address" property="ipAddress"/>
        <result column="user_agent" property="userAgent"/>
        <result column="metadata" property="metadata"/>
        <result column="created_at" property="createdAt"/>
    </resultMap>

    <select id="findById" resultMap="BaseResultMap">
        SELECT * FROM telemetry_data WHERE id = #{id}
    </select>

    <select id="findByToolIdAndCreatedAtBetween" resultMap="BaseResultMap">
        SELECT * FROM telemetry_data
        WHERE tool_id = #{toolId}
        AND created_at BETWEEN #{start} AND #{end}
    </select>

    <select id="findByEventTypeAndCreatedAtBetween" resultMap="BaseResultMap">
        SELECT * FROM telemetry_data
        WHERE event_type = #{eventType}
        AND created_at BETWEEN #{start} AND #{end}
    </select>

    <insert id="insert" parameterType="com.devtoolmp.entity.TelemetryData" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO telemetry_data (tool_id, event_type, ip_address, user_agent, metadata, created_at)
        VALUES (#{toolId}, #{eventType}, #{ipAddress}, #{userAgent}, #{metadata}, #{createdAt})
    </insert>

    <delete id="deleteById">
        DELETE FROM telemetry_data WHERE id = #{id}
    </delete>

</mapper>
