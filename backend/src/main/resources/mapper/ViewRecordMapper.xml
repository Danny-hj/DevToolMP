<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.devtoolmp.mapper.ViewRecordMapper">

    <resultMap id="BaseResultMap" type="com.devtoolmp.entity.ViewRecord">
        <id column="id" property="id"/>
        <result column="tool_id" property="toolId"/>
        <result column="client_identifier" property="clientIdentifier"/>
        <result column="ip_address" property="ipAddress"/>
        <result column="user_agent" property="userAgent"/>
        <result column="created_at" property="createdAt"/>
    </resultMap>

    <select id="findById" resultMap="BaseResultMap">
        SELECT * FROM view_records WHERE id = #{id}
    </select>

    <select id="findByToolIdAndCreatedAtBetween" resultMap="BaseResultMap">
        SELECT * FROM view_records
        WHERE tool_id = #{toolId}
        AND created_at BETWEEN #{start} AND #{end}
    </select>

    <insert id="insert" parameterType="com.devtoolmp.entity.ViewRecord" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO view_records (tool_id, client_identifier, ip_address, user_agent, created_at)
        VALUES (#{toolId}, #{clientIdentifier}, #{ipAddress}, #{userAgent}, #{createdAt})
    </insert>

    <delete id="deleteById">
        DELETE FROM view_records WHERE id = #{id}
    </delete>

</mapper>
