<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.devtoolmp.mapper.CommentReplyMapper">

    <resultMap id="BaseResultMap" type="com.devtoolmp.entity.CommentReply">
        <id column="id" property="id"/>
        <result column="rating_id" property="ratingId"/>
        <result column="client_identifier" property="clientIdentifier"/>
        <result column="username" property="username"/>
        <result column="reply_to_user_id" property="replyToUserId"/>
        <result column="reply_to_username" property="replyToUsername"/>
        <result column="content" property="content"/>
        <result column="created_at" property="createdAt"/>
    </resultMap>

    <select id="findById" resultMap="BaseResultMap">
        SELECT * FROM comment_replies WHERE id = #{id}
    </select>

    <select id="findByRatingIdOrderByCreatedAtAsc" resultMap="BaseResultMap">
        SELECT * FROM comment_replies WHERE rating_id = #{ratingId} ORDER BY created_at ASC
    </select>

    <insert id="insert" parameterType="com.devtoolmp.entity.CommentReply" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO comment_replies (rating_id, client_identifier, username, reply_to_user_id, reply_to_username, content, created_at)
        VALUES (#{ratingId}, #{clientIdentifier}, #{username}, #{replyToUserId}, #{replyToUsername}, #{content}, #{createdAt})
    </insert>

    <delete id="deleteById">
        DELETE FROM comment_replies WHERE id = #{id}
    </delete>

    <delete id="deleteByRatingId">
        DELETE FROM comment_replies WHERE rating_id = #{ratingId}
    </delete>

</mapper>
