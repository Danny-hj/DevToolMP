<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.devtoolmp.mapper.CategoryMapper">

    <resultMap id="BaseResultMap" type="com.devtoolmp.entity.Category">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="description" property="description"/>
        <result column="sort_order" property="sortOrder"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <select id="findById" resultMap="BaseResultMap">
        SELECT * FROM toolmk_categories WHERE id = #{id}
    </select>

    <select id="findByName" resultMap="BaseResultMap">
        SELECT * FROM toolmk_categories WHERE name = #{name}
    </select>

    <select id="findAll" resultMap="BaseResultMap">
        SELECT * FROM toolmk_categories
    </select>

    <select id="findAllByOrderBySortOrderAsc" resultMap="BaseResultMap">
        SELECT * FROM toolmk_categories ORDER BY sort_order ASC
    </select>

    <insert id="insert" parameterType="com.devtoolmp.entity.Category" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO toolmk_categories (name, description, sort_order, create_time)
        VALUES (#{name}, #{description}, #{sortOrder}, #{createTime})
    </insert>

    <update id="update" parameterType="com.devtoolmp.entity.Category">
        UPDATE toolmk_categories
        SET name = #{name},
            description = #{description},
            sort_order = #{sortOrder}
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM toolmk_categories WHERE id = #{id}
    </delete>

    <select id="countAll" resultType="int">
        SELECT COUNT(*) FROM toolmk_categories
    </select>

</mapper>
